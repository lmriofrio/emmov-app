<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
    <title>Agenda</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <script src="/js/main.js"></script>
</head>

<body>
    <div class="container mt-5">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="tab1-tab" data-toggle="tab" href="#tab1" role="tab" aria-controls="tab1"
                    aria-selected="true">Tab 1</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="tab2-tab" data-toggle="tab" href="#tab2" role="tab" aria-controls="tab2"
                    aria-selected="false">Tab 2</a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="tab1" role="tabpanel" aria-labelledby="tab1-tab">
                <!-- Contenido del Tab 1 -->
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th>Header 1</th>
                            <th>Header 2</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Data 1.1</td>
                            <td>Data 1.2</td>
                        </tr>
                        <tr>
                            <td>Data 1.3</td>
                            <td>Data 1.4</td>
                        </tr>
                    </tbody>
                </table>
                <!-- Botón para cargar el formulario -->
                <button id="loadFormButton" class="btn btn-primary">Abrir Formulario RUC</button>
                <!-- Contenedor para cargar el contenido dinámico -->
                <div id="dynamicContent" class="mt-3"></div>
            </div>
            <div class="tab-pane fade" id="tab2" role="tabpanel" aria-labelledby="tab2-tab">
                <!-- Contenido del Tab 2 -->
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th>Header 3</th>
                            <th>Header 4</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Data 2.1</td>
                            <td>Data 2.2</td>
                        </tr>
                        <tr>
                            <td>Data 2.3</td>
                            <td>Data 2.4</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="/js/main.js"></script>

    <script>
        $(document).ready(function() {
            $('#loadFormConstitucionJuridica').click(function(event) {
                event.preventDefault(); // Evita la acción predeterminada del enlace
                $('#dynamicContent').load('/agenda/ingreso-constitucion-juridica');
            });
        });
    </script>
</body>
</html>
