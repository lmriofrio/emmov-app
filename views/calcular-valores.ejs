        <!--  Contendio principal -->
        <div class="body-wrapper">
            <!--  Encabezado de pagina -->
            <header class="app-header">
                <nav class="navbar navbar-expand-lg navbar-light">
                </nav>
            </header>
            <!--  Fin de encabezado de pagina  -->
            <div class="container-fluid">

                <div class="row">
                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-body p-4">
                                <div class="d-sm-flex d-block align-items-center justify-content-between mb-9">
                                    <div class="mb-3 mb-sm-0">
                                        <h5 class="card-title fw-semibold">Calcular valores a pagar</h5>
                                        <p class="card-subtitle mb-0">Información del vehiculo y trámite</p>
                                    </div>
                                    <div style="width: 20%;">
                                        <input type="text" name="" class="form-control-disable text-center" id=""
                                            placeholder="">
                                    </div>
                                </div>
                                <form id="formulario" action="/calcular-valores" method="post">
                                    <div class="form-items">
                                        <label for="area" class="form-label fw-semibold">Área del servicio</label>
                                        <select class="form-select" id="area" name="area"
                                            aria-label="Default select example">
                                            <option value="MATRICULACIÓN">MATRICULACIÓN</option>
                                        </select>
                                    </div>
                                    <div class="form-items1">
                                        <label for="tramite" class="form-label fw-semibold">Tipo de Trámite</label>
                                        <select class="form-select" id="tramite" name="tramite">
                                            <option selected></option>
                                            <% tiposTramites.forEach(tipo=> { %>
                                                <option value="<%= tipo.tipo_tramite %>">
                                                    <%= tipo.tipo_tramite %>
                                                </option>
                                                <% }); %>
                                        </select>
                                    </div>

                                    <div class="form-items">
                                        <label for="placa" class="form-label fw-semibold">Placa</label>
                                        <div class="input-group2">
                                            <input type="text" name="placa" id="placa" class="form-control"
                                                placeholder="" aria-label="Recipient's username"
                                                aria-describedby="basic-addon2" autocomplete="off">
                                            <button class="btn btn-search font-medium px-3" type="button"
                                            id="buscarVehiculo">Buscar</button>
                                        </div>
                                    </div>

                                    <div class="row justify-content-center align-items-center g-2">
                                        <div class="col">
                                            <div class="form-items4">
                                                <label for="" class="form-label fw-semibold">C. de Vehiculo</label>
                                                <input type="text" name="clase_vehiculo" class="form-control"
                                                    id="clase_vehiculo" placeholder="" autocomplete="off">
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="form-items4">
                                                <label for="" class="form-label fw-semibold">C. de Transporte</label>
                                                <input type="text" name="clase_transporte" class="form-control" id="clase_transporte"
                                                    placeholder="" autocomplete="off">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row justify-content-center align-items-center g-2">
                                        <div class="col">
                                            <div class="form-items4">
                                                <label for="" class="form-label fw-semibold">Ultima Rtv</label>
                                                <input type="text" name="" class="form-control"
                                                    id="" placeholder="Año" autocomplete="off">
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="form-items4">
                                                <label for="" class="form-label fw-semibold">Avalúo</label>
                                                <input type="text" name="" class="form-control" id=""
                                                    placeholder="4.000" autocomplete="off">
                                            </div>
                                        </div>
                                    </div>


                                    <button type="submit" class="btn btn-primary">Procesar</button>
                            </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="card">
                            <div class="invoice-header d-flex align-items-center border-bottom p-3">
                                <h5 class="font-medium text-uppercase mb-0">PLACA:</h5>
                                <div class="ms-auto">
                                    <h5 class="invoice-number mb-0">#127</h5>
                                </div>
                            </div>
                            <div class="card-body p-4">
                                <div id="tabla-container" class="table-responsive rounded-2 mb-4">
                                    <table class="table border text-nowrap customize-table mb-0 align-middle">
                                    </table>
                                </div><!-- calcular-valores.ejs -->

                                <div class="text-center <%= typeof placa !== 'undefined' ? 'fw-bolder' : '' %>">
                                    <!-- Mostrar el valor de la placa si está definido -->
                                    <% if (typeof placa !=='undefined' ) { %>
                                        <h1 class="display-4 font-weight-bold">
                                            <%= placa %>
                                        </h1>
                                        <% } else { %>
                                            <h1 class=""></h1>
                                            <% } %>
                                </div>


                                <br>

                                <% if (resultados && resultados.length> 0) { %>
                                    <!-- Mostrar resultados en una tabla con estilos de Bootstrap -->
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th class="text-center">Concepto</th>
                                                <th class="text-center">Cantidad</th>
                                                <th class="text-center">Valor unitario</th>
                                                <th class="text-center">Valor final</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% resultados.forEach(item=> { %>
                                                <tr>
                                                    <td>
                                                        <%= item.concepto %>
                                                    </td>
                                                    <td class="text-center">
                                                        <%= item.cantidad %>
                                                    </td>
                                                    <td class="text-center">
                                                        <%= item.valor_u %>
                                                    </td>
                                                    <td class="text-center">
                                                        <%= item.valor_f %>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                        </tbody>
                                    </table>
                                    <% } else { %>
                                        <p class="text-center">Sin valores asignados</p>
                                        <% } %>




                                            <div class="col-md-12">
                                                <div class="pull-right mt-4 text-end">
                                                    <p>Sub - Total amount: $20,858</p>
                                                    <p>vat (10%) : $2,085</p>
                                                    <hr>
                                                    <h3><b>Total :</b> $22,943</h3>
                                                </div>
                                                <div class="clearfix"></div>
                                                <hr>
                                                <div class="text-end">
                                                    <button class="btn btn-danger" type="submit">
                                                        Proceed to payment
                                                    </button>
                                                    <button class="btn btn-default print-page" type="button">
                                                        <span><i class="ti ti-printer fs-5"></i>
                                                            Print</span>
                                                    </button>
                                                </div>
                                            </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>



        </div>
    </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@tabler/icons@latest/dist/tabler-icons.min.js"></script>
